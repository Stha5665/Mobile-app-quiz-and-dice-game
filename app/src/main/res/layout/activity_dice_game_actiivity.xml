<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiceGameActiivity"
    android:orientation="vertical"
    android:padding="12dp"
    android:id="@+id/ContainerOfDice">
<!--    by default its value is horizantal-->


    <TextView

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="18dp"
        android:id="@+id/tvHelp"
        android:background="@drawable/back1"
        android:padding="5dp"
        android:gravity="center"
        android:text="Touch on screen to start"
        android:textSize="17sp"
        android:textColor="#ffffff"/>

    <TextView
        android:gravity="center"
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp"
        android:text="Winner"/>

<!--    add linear layout to display vertically align two dice images-->


    <LinearLayout

        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">


        <TextView
            android:textAlignment="center"
            android:layout_height="50dp"
            android:padding="11dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="140dp"
            android:text="Player 1"
            android:textColor="#000000"
            android:textSize="25dp" />


        <ImageView
            android:layout_height="140dp"
            android:layout_width="140dp"
            android:id="@+id/die1"
            android:layout_marginBottom="15dp"
            android:src="@drawable/d4" />

        <TextView
            android:padding="10dp"
            android:layout_width="140dp"
            android:text="Player 2"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_height="50dp"
            android:textSize="25dp" />

        <ImageView
            android:layout_height="140dp"
            android:layout_width="140dp"
            android:id="@+id/die2"
            android:layout_marginBottom="15dp"
            android:src="@drawable/d4" />

    </LinearLayout>
</LinearLayout>